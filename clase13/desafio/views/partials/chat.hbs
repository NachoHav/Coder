<div class='chat_window bg-dark text-light'>
  <div class='top_menu'>
    <div class='title'>Chat</div>
  </div>
  <ul id='messages' class='messages'></ul>
  <div class='bottom_wrapper clearfix'>
    <form id='form-Chat'>
      <div class='message_input_wrapper input-group-text bg-secondary'>
        <input
          id='email'
          name='email'
          class='message_input'
          type='email'
          size='64'
          maxLength='64'
          required
          placeholder='Ingrese su Mail...'
        />

      </div>
      <div class='message_input_wrapper input-group-text bg-secondary'>

        <input
          id='text'
          name='text'
          class='message_input'
          placeholder='Ingrese su mensaje...'
          required
        />
      </div>
      <button type='submit' class='send_message btn btn-md btn-primary'>
        Enviar
      </button>
    </form>
  </div>
</div>
