<div class='container mt-5'>
  <div class='row justify-content-center'>
    <div class='col-12 col-md-8'>
      <form class='g-3' id='form-product' action='/api/guardar' method='post'>

        <div class='input-group mb-3'>
          <span class='input-group-text'>Producto</span>
          <input
            type='text'
            id='title'
            name='title'
            class='form-control'
            placeholder='Titulo producto'
            aria-label='Producto'
          />
        </div>

        <div class='input-group mb-3'>
          <span class='input-group-text'>$</span>
          <input
            type='number'
            id='price'
            name='price'
            class='form-control'
            placeholder=''
            aria-label='Precio'
          />
        </div>

        <div class='input-group mb-3'>
          <span class='input-group-text'>Thumbnail</span>
          <input
            type='text'
            id='thumbnail'
            name='thumbnail'
            class='form-control'
            placeholder='https://www.foto.com'
          />
        </div>

        <div>
          <input type='hidden' name='form' value='true' />
        </div>

        <div class='col-12 text-center'>
          <button class='btn btn-danger btn-lg mt-5 col-3' type='submit'>Guardar</button>
        </div>
      </form>
    </div>
  </div>
</div>