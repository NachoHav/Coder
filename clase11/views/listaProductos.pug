extends layout.pug

block content
    div(class='container')
        h2(class='text-center mb-4 text-light') Vista de productos

            table(class='table table-dark')
                thead
                    tr
                        th(scope='col') Producto
                        th(scope='col') Precio
                        th(scope='col') Foto
                tbody
                each product in productos
                    tr
                        td #{product.title}
                        td #{product.price}
                        td
                            img(style='width: 50px; height: auto' src=product.thumbnail alt='products')

        a(href='/api/' class='btn btn-light') Volver al inicio